{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LLM-Gate",
  "version": "../package.json",
  "identifier": "cn.xuanzhi33.llm-gate",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:15173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "LLM Gate",
        "width": 1024,
        "height": 500,
        "minHeight": 400,
        "minWidth": 400,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "category": "Utility",
    "copyright": "Copyright Â© 2026 xuanzhi33. Licensed under AGPL-3.0.",
    "longDescription": "A lightweight local AI gateway that securely proxies LLM API requests with automatic key injection and CORS support.",
    "targets": ["nsis", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English", "SimpChinese"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEyMDJBRDdBODg3OUFBOEQKUldTTnFubUllcTBDRWtIMjEwWUxGUDJpWm02ME81TXZDdVRBWkY0RVFTK1BGN0cwMjBPbVJpQkwK",
      "endpoints": ["https://github.com/xuanzhi33/LLM-Gate/releases/latest/download/latest.json"]
    }
  }
}
